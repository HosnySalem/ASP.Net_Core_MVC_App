@{
    Department dept = (Department)ViewBag.CurrentEmployee;
}

<div class="row">
    <d1 class="row col-6">

        <dt class="col-md-3 text-primary">@Html.DisplayNameFor(d => dept.Id)</dt>
        <dd class="col-md-9">@Model.Id</dd>

        <dt class="col-md-3 text-primary">@Html.DisplayNameFor(d => dept.Name)</dt>
        <dd class="col-md-9">@Model.Name</dd>

        <dt class="col-md-3 text-primary">@Html.DisplayNameFor(d => dept.Description)</dt>
        <dd class="col-md-9">@Model.Description</dd>

        <dt class="col-md-3 text-primary">@Html.DisplayNameFor(d => dept.AnnualBudget)</dt>
        <dd class="col-md-9">@Model.AnnualBudget</dd>

        <dt class="col-md-3 text-primary">@Html.DisplayNameFor(d => dept.StartDate)</dt>
        <dd class="col-md-9">@Model.StartDate</dd>

        <dt class="col-md-3 text-primary">@Html.DisplayNameFor(d => dept.IsActive)</dt>
        <dd class="col-md-9">@Model.IsActive</dd>

        @if (dept.Employees.Count > 0 && dept.Employees != null)
        {
            <ul class="list-group">
                <li class="list-group-item active">Employees</li>
                @foreach (var item in dept.Employees)
                {
                    <a asp-controller="Employees" asp-action="GetDetailsView" asp-route-id="@item.Id" style="text-decoration:none">
                    <li class="list-group-item ">@item.FullName (@item.Position)</li>
                    </a>
                }
            </ul>
        }
        else
        {
            <h1 class="alert alert-danger text-center">There is no Employees now.</h1>
        }
    </d1>
    <img src="@dept.ImagePath" class="col-6 card" />
</div>